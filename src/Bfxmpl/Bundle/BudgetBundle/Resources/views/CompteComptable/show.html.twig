{% extends 'BfxmplBudgetBundle:CompteComptable:comptecomptable.html.twig' %}

{% block body -%}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ entity.numero }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-default btn-default">
        <a href="{{ path('comptecomptable') }}">
            <span class="glyphicon glyphicon-chevron-left" /> Retour
        </a>
    </button>

    <button type="button" class="btn btn-default btn-default">
        <a href="{{ path('comptecomptable_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil" /> Modifier
        </a>
    </button>

    {{ form(delete_form) }}
{% endblock %}
