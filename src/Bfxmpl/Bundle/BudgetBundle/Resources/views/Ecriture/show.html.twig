{% extends 'BfxmplBudgetBundle:Ecriture:ecriture.html.twig' %}

{% block body -%}
    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ entity.libelle }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.montant }}</td>
        </tr>
        <tr>
            <th>Sens</th>
            <td>{{ entity.sens }}</td>
        </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-default btn-default">
        <a href="{{ path('ecriture') }}">
            <span class="glyphicon glyphicon-chevron-left" /> Retour
        </a>
    </button>

    <button type="button" class="btn btn-default btn-default">
        <a href="{{ path('ecriture_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil" /> Modifier
        </a>
    </button>

    {{ form(delete_form) }}
{% endblock %}
